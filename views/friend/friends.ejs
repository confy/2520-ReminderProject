<div class="container">
  <h1 class="page-header">Friends</h1>
  
  <h4>Your friends:</h4>
  <ul class="list-group">
    <% if (friends.length === 0) { %>
      <li class="list-group-item">
          <strong>You have no friends :(</strong>
      </li>
    <% } %>
    <% friends.forEach(function (friend) { %>
      <li class="list-group-item">
        <strong><%= friend.email %> | </strong>
        <%= friend.amount %> reminders
      </li>
    <% }) %>
  </ul>
  
</div>
  